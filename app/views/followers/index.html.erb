<h1>Followers</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name_with_username, user_path(user.object) %>

      <% unless @user.following?(user.object) %>
        <%= link_to t('views.followers.index.follow'), follow_path(user.id), method: :post %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @users %>