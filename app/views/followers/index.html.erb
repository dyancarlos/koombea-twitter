<h1>Followers</h1>

<ul class="list-group list-group-flush">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= link_to user.name_with_username, user_path(user.object) %>

      <% unless @user.following?(user.object) %>
        <%= link_to t('views.followers.index.follow'), follow_path(user.object), method: :post, class: 'btn btn-primary' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @users %>